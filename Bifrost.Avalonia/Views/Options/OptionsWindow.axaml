<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Bifrost.Avalonia.Views.Options"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="420"
        x:Class="Bifrost.Avalonia.Views.Options.OptionsWindow"
        Title="Options" Width="640" Height="420"
        WindowStartupLocation="CenterOwner"
        CanResize="False" CanMinimize="False" >

    <Grid RowDefinitions="* auto" Background="#242424">
        <Grid Grid.Row="0" ColumnDefinitions="180 *" Background="{DynamicResource ThemeBackgroundColor}">
            <ListBox BorderThickness="0" Background="#323232" x:Name="CategoryListBox" SelectionChanged="CategoryListBox_SelectionChanged" SelectionMode="Single, AlwaysSelected">
                <ListBox.Styles>
                    <Style Selector="StackPanel">
                        <Setter Property="Orientation" Value="Horizontal" />
                        <Setter Property="Spacing" Value="4" />
                        <Setter Property="Margin" Value="8 0 0 0" />
                    </Style>
                    <Style Selector="Image">
                        <Setter Property="Width" Value="24" />
                        <Setter Property="Height" Value="24" />
                    </Style>
                    <Style Selector="Label">
                        <Setter Property="FontSize" Value="16" />
                    </Style>
                </ListBox.Styles>
                
                <ListBoxItem>
                    <StackPanel>
                        <Image Source="/Assets/Icons/general.png"/>
                        <Label Content="General"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel>
                        <Image Source="/Assets/Icons/bifrost.png"/>
                        <Label Content="Bifrost"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel>
                        <Image Source="/Assets/Icons/logging.png"/>
                        <Label Content="Logging"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel>
                        <Image Source="/Assets/Icons/advanced.png"/>
                        <Label Content="Advanced"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem>
                    <StackPanel>
                        <Image Source="/Assets/Icons/about.png"/>
                        <Label Content="About"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>

            <Panel Grid.Column="1" Margin="8">
                <local:OptionsGeneralUserControl x:Name="GeneralUserControl" IsVisible="False" />
                <local:OptionsBifrostUserControl x:Name="BifrostUserControl" IsVisible="False" />
                <local:OptionsLoggingUserControl x:Name="LoggingUserControl" IsVisible="False" />
                <local:OptionsAdvancedUserControl x:Name="AdvancedUserControl" IsVisible="False" />
                <local:OptionsAboutUserControl x:Name="AboutUserControl" IsVisible="False" />
            </Panel>

        </Grid>

        <Grid Grid.Row="1" Grid.ColumnDefinitions="* 80 80" Margin="10" ColumnSpacing="4">
            <Button Grid.Column="1" IsDefault="True" Content="Apply" x:Name="ApplyButton" Click="ApplyButton_Click" />	
            <Button Grid.Column="2" IsCancel="True" Content="Cancel" x:Name="CancelButton" Click="CancelButton_Click" />	
        </Grid>
    </Grid>

</Window>
